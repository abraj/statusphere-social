{
  "name": "statusphere-social",
  "version": "0.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup",
    "start": "node dist/index.js | pino-pretty",
    "deploy": "npm run build && npm run pm2:start",
    "pm2:start": "pm2 start dist/index.js --name statusphere-social --time",
    "pm2:stop": "pm2 stop statusphere-social && pm2 delete statusphere-social",
    "pm2:logs": "pm2 logs statusphere-social",
    "clean": "rimraf dist"
  },
  "type": "commonjs",
  "dependencies": {
    "dotenv": "^17.2.3",
    "envalid": "^8.1.1",
    "express": "^5.2.1",
    "onelyid": "file:../onelyid-local",
    "pino": "^10.1.0",
    "uhtml": "^4.7.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "pino-pretty": "^13.1.3",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
